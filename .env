# -----------------------------------------------------------------------------
# GitLab Server Configuration
# -----------------------------------------------------------------------------
# URL of your GitLab instance
CI_SERVER_URL="https://gitlab.grzegorz-pietrzak.pl/"

# Registration token from your GitLab instance (Settings > CI/CD > Runners)
REGISTRATION_TOKEN="your-registration-token-here"


# -----------------------------------------------------------------------------
# Runner 1: Privileged Docker Builder
# Description: Used for building and pushing Docker images (Docker-in-Docker).
# Requires privileged mode and access to the Docker socket.
# -----------------------------------------------------------------------------
# Runner 1 Configuration
RUNNER_1_NAME="fent-droyd"
RUNNER_1_TAGS="docker,yakuza,image_builder,fent-droyd,docker_privileged"
RUNNER_1_LIMIT=1
RUNNER_1_DOCKER_IMAGE="docker:24.0.5"
RUNNER_1_DOCKER_PRIVILEGED="true"
# Note the JSON-like array format for volumes.
RUNNER_1_DOCKER_VOLUMES='["/var/run/docker.sock:/var/run/docker.sock", "/cache"]'
RUNNER_1_DOCKER_PULL_POLICY="if-not-present"
# Full blast runner
RUNNER_1_DOCKER_CPUS=""
RUNNER_1_DOCKER_MEMORY=""

# -----------------------------------------------------------------------------
# Runner 2: Non-Privileged Test Runner
# Description: A general-purpose runner for running tests, linting, etc.
# Does not have privileged access for better security. Has higher concurrency.
# -----------------------------------------------------------------------------
RUNNER_2_NAME="dopamine-maxxing"
RUNNER_2_TAGS="docker,yakuza,image_builder,dopamine-maxxing"
RUNNER_2_LIMIT=2
RUNNER_2_DOCKER_IMAGE="docker:24.0.5"
RUNNER_2_DOCKER_PRIVILEGED="true"
RUNNER_2_DOCKER_VOLUMES='["/var/run/docker.sock:/var/run/docker.sock", "/cache"]'
RUNNER_2_DOCKER_PULL_POLICY="if-not-present"
# Allocate specific resources
RUNNER_2_DOCKER_CPUS="2"
RUNNER_2_DOCKER_MEMORY="4g"


# -----------------------------------------------------------------------------
# Runner 3: Lightweight Deploy Runner
# Description: A minimal runner for simple deployment scripts.
# Runs untagged jobs and has low resource allocation.
# -----------------------------------------------------------------------------
RUNNER_3_NAME="propability-booster"
RUNNER_3_TAGS="docker,yakuza,image_builder,propability-booster"
RUNNER_3_LIMIT=2
RUNNER_3_DOCKER_IMAGE="docker:24.0.5"
RUNNER_3_DOCKER_PRIVILEGED="true"
RUNNER_3_DOCKER_VOLUMES='["/var/run/docker.sock:/var/run/docker.sock", "/cache"]'
RUNNER_3_DOCKER_PULL_POLICY="if-not-present"
# No specific CPU or Memory limits (uses Docker defaults)
RUNNER_3_DOCKER_CPUS=""
RUNNER_3_DOCKER_MEMORY=""
